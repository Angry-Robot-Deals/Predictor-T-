    "version": "0.2.0",
    "configurations": [
        {
            // single agent trading
            "name": "XAT",
            "type": "python",
            "request": "launch",
            "program": "TradingFlow/agent.py",
            "autoReload": {
                "enabled": true
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"            
        },
        {
            // group of agents trading
            "name": "PIPE",
            "type": "python",
            "request": "launch",
            "program": "TradingFlow/main.py",
            "autoReload": {
                "enabled": true
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        }        
    ]
}